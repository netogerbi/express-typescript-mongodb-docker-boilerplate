  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netogerbi/boilerplate-node-express-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/netogerbi/boilerplate-node-express-typescript/issues",
    "email": "netogerbi2@hotmail.com"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "NODE_ENV=test jest --projects ./test --forceExit --runInBand",
    "dev": "ts-node-dev --inspect --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register ./src/index.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.0",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.4.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.2.3",
    "rimraf": "^3.0.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/rimraf": "^3.0.2",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "install": "^0.13.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "npm": "^8.5.5",
    "prettier": "2.6.0",
    "sinon": "^13.0.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "engines": {
    "node": "16.14.2"
  }
}
